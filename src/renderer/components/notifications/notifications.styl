.page-notifications
    display flex
    flex-direction column
    max-width 50%

    &__title
        font-size 24pt

    &__checkBoxContainer
        display flex
        flex-direction row
    
    &__inputCheckBox
        margin-left 4px
        size auto

    &__inputText
        outline none
        border none
        display inline-block
        height 32px
        margin-right 4px
        padding 4px 16px
        color #e0e0e0
        font-size 15px
        line-height 24px
        background #202020
        border none
        border-radius 4px